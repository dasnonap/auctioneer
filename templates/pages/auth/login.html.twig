{% extends 'layout/auth.html.twig' %}

{% block title %}Login - Auctioneer{% endblock %}

{% block auth_title %}Login to Your Account{% endblock %}
{% block auth_subtitle %}Access your account to continue{% endblock %}

{% block auth_form %}
    <form method="post">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-medium mb-2">Email</label>
            <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500" required>
        </div>
        <!-- Add more form fields -->
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Login</button>
    </form>
{% endblock %}

{% block auth_footer %}
    <p class="text-sm text-gray-600">
        Don't have an account? <a href="{{ path('app_auth_register') }}" class="text-blue-600 hover:text-blue-700 font-medium">Sign up</a>
    </p>
{% endblock %}