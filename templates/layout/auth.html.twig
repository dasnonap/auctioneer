{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <!-- Card Container -->
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <!-- Header Section -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-8 text-center">
                <h1 class="text-3xl font-bold text-white mb-2">
                    {% block auth_title %}Authentication{% endblock %}
                </h1>
                <p class="text-blue-100 text-sm">
                    {% block auth_subtitle %}Welcome to our platform{% endblock %}
                </p>
            </div>

            <!-- Form Section -->
            <div class="px-6 py-8">
                {% block auth_form %}
                    <!-- Child templates will override this block -->
                    <p class="text-center text-gray-500">Form content goes here</p>
                {% endblock %}
            </div>

            <!-- Footer Section -->
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 text-center">
                {% block auth_footer %}
                    <p class="text-sm text-gray-600">
                        Don't have an account? <a href="#" class="text-blue-600 hover:text-blue-700 font-medium">Sign up</a>
                    </p>
                {% endblock %}
            </div>
        </div>

        <!-- Additional Info -->
        <div class="mt-6 text-center">
            {% block auth_info %}
                <p class="text-gray-400 text-xs">
                    By continuing, you agree to our <a href="#" class="text-blue-400 hover:text-blue-300">Terms of Service</a> and <a href="#" class="text-blue-400 hover:text-blue-300">Privacy Policy</a>
                </p>
            {% endblock %}
        </div>
    </div>
</div>
{% endblock %}